<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zeroli.openeyes.ui.main.activity.MainActivity">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        app:dayNightBackgroundAttr="dayNightBackground"
        app:tl_indicator_height="0dp"
        app:tl_indicator_color="@color/gray"
        app:tl_iconHeight="28dp"
        app:tl_iconWidth="44dp"
        app:tl_textsize="10sp"
        app:tl_textSelectColor="@color/main_color"
        app:tl_textUnselectColor="@color/light_gray"
        app:tl_underline_height="0dp"




        />



    <FrameLayout
        android:id="@+id/fl_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_layout"
        app:dayNightBackgroundAttr="dayNightBackground"
        >

    </FrameLayout>


</RelativeLayout>
